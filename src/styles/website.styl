html, html * 
  background none #000000
  color #FFFFFF


.row.footer 
  text-align center

#container 
  padding 0 2rem

#main_menu
  padding-top 2rem

a
  color #CCCCCC
  text-decoration underline dotted

a:hover
  color #FFFFFF
  text-decoration none

@media only screen and (max-width: 800px)
  #jumbotron
    padding 0px !important

  #main_menu
    margin 1rem 0
    padding 5rem 0 0

  #main_menu .item.logo
    position absolute
    top 2rem

  #comics .column.four.wide
    max-width 25%
